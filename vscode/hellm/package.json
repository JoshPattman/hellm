{
  "name": "hellm",
  "displayName": "HeLLM",
  "description": "Language support for the HeLLM language",
  "version": "0.0.1",
  "repository": "https://github.com/JoshPattman/hellm",
  "engines": {
    "vscode": "^1.87.0"
  },
  "main": "./extension.js",
  "icon": "./icon.png",
  "categories": [
    "Programming Languages",
    "Formatters"
  ],
  "contributes": {
    "languages": [{
      "id": "hellm",
      "aliases": ["hellm"],
      "extensions": [".hl"],
      "configuration": "./language-configuration.json",
      "icon": {
        "light": "./icon.png",
        "dark": "./icon.png"
      
      }
    }],
    "grammars": [{
      "language": "hellm",
      "scopeName": "source.hl",
      "path": "./syntaxes/hellm.tmLanguage.json"
    }],
    "configuration": {
      "title": "HeLLM",
      "properties": {
        "hellm.hellmPath": {
          "type": "string",
          "default": "hellm",
          "description": "Path to the hellm executable"
        }
      }
    }
  }
}
